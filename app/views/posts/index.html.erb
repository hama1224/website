<h1>投稿一覧</h1>
<%= link_to "新規登録", new_post_path, class: "btn btn-primary" %>


  <% @posts.each do |post| %>
      
    <table border="1">
      <tr>
        <th>タイトル</th>
        <th>内容</th>
      </tr>
      <tr>
        <td>
          <p><%= post.title %></p>
        </td>
        <td>
          <P><%= post.description %></P>
        </td>
      </tr>
    </table>
            
            
  <% end %>
           