<h1>投稿一覧</h1>
<%= link_to "新規登録", new_post_path, class: "btn btn-primary" %>


  <% @posts.each do |post| %>
      
    <table border="1">
      <tr>
        <th>タイトル</th>
        <th>内容</th>
        <th>投稿時間</th>
      </tr>
      <tr>
        <td>
          <%= link_to post.title, post %>
        </td>
        <td>
          <P><%= post.description %></P>
        </td>
        <td>
          <P><%= post.created_at %></P>
        </td>
        <td>
          <%= link_to "編集", edit_post_path(post), class: 'btn btn-primary mr-3' %>
        </td>
        <td>
          <%= link_to "削除", post_path(post), method: :delete, class: 'btn btn-danger' %>
        </td>
      </tr>
    </table>
            
            
  <% end %>
           