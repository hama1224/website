<h1>投稿の新規登録</h1>
<%= link_to "一覧", posts_path, class: "nav-link" %>

<%= form_for @post do |f| %>
  <div class="form-group">
   <%= f.label :title %>
   <%= f.text_field :title%>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
<% end %>